{
    "name": "botfactoryit/flarum-imgur-upload",
    "description": "Upload images from Flarum to Imgur when composing posts",
    "version": "v2.0.1",
    "type": "flarum-extension",
    "license": "GPL-3.0",
    "authors": [
      {
        "name": "Matteo Contrini",
        "email": "m.contrini@gmail.com"
      }
    ],
    "require": {
        "flarum/core": "^0.1.0-beta.7"
    },
    "extra": {
        "flarum-extension": {
            "title": "Imgur Upload",
            "icon": {
                "name": "upload",
                "backgroundColor": "#000",
                "color": "#87d37c"
            }
        }
    },
    "autoload": {
        "psr-4": {
            "BotFactory\\ImgurUpload\\": "src/"
        }
    }
}
